{
	"name": "@sg.js/enum-utils",
	"version": "1.0.2",
	"description": "Use enums with familiar, immutable Set and Map interfaces.",
	"keywords": [
		"typescript",
		"ts",
		"enum",
		"set",
		"map",
		"EnumSet",
		"EnumMap",
		"utils",
		"types",
		"guard"
	],
	"homepage": "https://github.com/shaungrady/enum-utils#readme",
	"repository": "github:shaungrady/enum-utils",
	"license": "MIT",
	"author": {
		"name": "Shaun Grady",
		"email": "grady@shaungrady.com",
		"url": "https://shaungrady.com"
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/main.d.ts",
				"default": "./dist/esm/main.js"
			},
			"require": {
				"types": "./dist/commonjs/main.d.ts",
				"default": "./dist/commonjs/main.js"
			}
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/commonjs/main.js",
	"module": "./dist/esm/main.js",
	"types": "./dist/commonjs/main.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"lint": "xo --fix && prettier -w ./src ./test --list-different",
		"prepare": "tshy",
		"release": "npm run build && np",
		"test": "npm run lint && tsc --noEmit && ava",
		"util:readme-toc": "doctoc README.md --github",
		"util:release": "np",
		"util:watch:test": "ava --watch"
	},
	"xo": {
		"ignores": [
			"test/**"
		],
		"prettier": true,
		"rules": {
			"@typescript-eslint/ban-ts-comment": "off",
			"@typescript-eslint/member-ordering": "off",
			"@typescript-eslint/naming-convention": "off",
			"import/extensions": "off",
			"n/file-extension-in-import": "off",
			"prettier/prettier": "off",
			"unicorn/filename-case": "off",
			"unicorn/no-array-callback-reference": "off"
		}
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-packagejson",
			"./node_modules/prettier-plugin-jsdoc/dist/index.js"
		],
		"proseWrap": "always"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"files": [
			"test/**/*",
			"!test/utils"
		],
		"nodeArguments": [
			"--import=tsimp",
			"--no-warnings"
		]
	},
	"dependencies": {
		"type-fest": "^3.13.1"
	},
	"devDependencies": {
		"@types/node": "^20.17.0",
		"ava": "^6.1.3",
		"doctoc": "^2.2.1",
		"expect-type": "^1.1.0",
		"prettier": "^3.3.3",
		"prettier-plugin-jsdoc": "^1.3.0",
		"prettier-plugin-packagejson": "^2.5.3",
		"tshy": "^3.0.2",
		"tsimp": "^2.0.12",
		"typescript": "^5.6.3",
		"xo": "^0.57.0"
	},
	"packageManager": "pnpm@9.12.2",
	"volta": {
		"node": "20.18.0",
		"pnpm": "9.12.2"
	},
	"tshy": {
		"selfLink": false,
		"exports": {
			".": "./src/main.ts",
			"./package.json": "./package.json"
		}
	}
}
